                                                     $h, $c, $o4;
  }
  elsif (($atom1 eq "N1") || ($atom2 eq "N1"))  {
    LOOK5: while (<PDB>)  {
      ($a, $atomnum, $atomname, $resname, $resnum) = split;
      if ($resnum == $res)  {
        if ($atomname eq "N1")  {
          $n = $atomnum;
        }
        elsif ($atomname eq "H1")  {
          $h = $atomnum;
        }
        elsif ($atomname eq "C6")  {
          $c6 = $atomnum;
        }
        elsif ($atomname eq "C2")  {
          $c2 = $atomnum;
        }
      }
    }
    $tot++;
    printf DIPOUT "   id(%d)=%d,   jd(%d)=%d,  dobs(%d)= %5.2f, \n",
                  $tot, $n, $tot, $h, $tot, $dip;
    printf ANGOUT "# N angles for residue %d\n", $res;
    printf ANGOUT " &rst   iat= %d, %d, %d, 0, \n r1=108., r2=118.00, r3=118.00, r4=128.,  &end\n",
                                                     $h, $n, $c2;
    printf ANGOUT " &rst   iat= %d, %d, %d, 0, \n r1=107., r2=116.80, r3=116.80, r4=127.,  &end\n",
                                                     $h, $n, $c6;
  }
  elsif (($atom1 eq "N3") || ($atom2 eq "N3"))  {
    LOOK6: while (<PDB>)  {
      ($a, $atomnum, $atomname, $resname, $resnum) = split;
      if ($resnum == $res)  {
        if ($atomname eq "N3")  {
          $n = $atomnum;
        }
        elsif ($atomname eq "H3")  {
          $h = $atomnum;
        }
        elsif ($atomname eq "C4")  {
          $c4 = $atomnum;
        }
        elsif ($atomname eq "C2")  {
          $c2 = $atomnum;
        }
      }
    }
    $tot++;
    printf DIPOUT "   id(%d)=%d,   jd(%d)=%d,  dobs(%d)= %5.2f, \n",
                  $tot, $n, $tot, $h, $tot, $dip;
    printf ANGOUT "# N angles for residue %d\n", $res;
    printf ANGOUT " &rst   iat= %d, %d, %d, 0, \n r1=107., r2=116.80, r3=116.80, r4=127.,  &end\n",
                                                     $h, $n, $c2;
    printf ANGOUT " &rst   iat= %d, %d, %d, 0, \n r1=107., r2=116.80, r3=116.80, r4=127.,  &end\n",
                                                     $h, $n, $c4;
  }
  elsif (($atom1 eq "N7") || ($atom2 eq "N7"))  {
    LOOK7: while (<PDB>)  {
      ($a, $atomnum, $atomname, $resname, $resnum) = split;
      if ($resnum == $res)  {
        if ($atomname eq "N7")  {
          $n = $atomnum;
        }
        elsif ($atomname eq "H8")  {
          $h = $atomnum;
        }
        elsif ($atomname eq "N9")  {
          $n9 = $atomnum;
        }
        elsif ($atomname eq "C8")  {
          $c8 = $atomnum;
        }
      }
    }
    $tot++;
    printf DIPOUT "   id(%d)=%d,   jd(%d)=%d,  dobs(%d)= %5.2f, \n",
                  $tot, $n, $tot, $h, $tot, $dip;
    printf ANGOUT "# N angles for residue %d\n", $res;
    printf ANGOUT " &rst   iat= %d, %d, %d, 0, \n r1=113., r2=123.05, r3=123.05, r4=133.,  &end\n",
                                                     $n, $c8, $h;
    printf ANGOUT " &rst   iat= %d, %d, %d, 0, \n r1=113., r2=123.05, r3=123.05, r4=133.,  &end\n",
                                                     $h, $c8, $n9;
  }
}
close(DIP);
close(PDB);

close(DIPOUT);
close(ANGOUT);
