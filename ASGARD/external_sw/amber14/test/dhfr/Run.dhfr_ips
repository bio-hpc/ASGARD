#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

if( ! $?TESTsander ) set TESTsander = "../../bin/sander"

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

cat > gbin <<EOF
 short minimization
 &cntrl
   ntx=5, irest=1,
   ntc=1, ntf=1, tol=0.0000001, 
   imin=0, nstlim=1,
   ntpr=1, ntwr=10000, 
   cut=12.0, ips=2,
 /
 &ewald
    skinnb=0.0, vdwmeth=0,
 /
EOF

set output = mdout.dhfr_ips

touch dummy
$DO_PARALLEL $TESTsander -O -i gbin -c md12.x -o $output < dummy || goto error

../dacdif $output.save $output
/bin/rm -f gbin restrt mdinfo dummy
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
