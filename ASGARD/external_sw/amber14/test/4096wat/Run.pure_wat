#!/bin/csh -f
#TEST-PROGRAM sander, pmemd
#TEST-DESCRIP microcanonical ensemble, periodic boundaries, shake, water
#TEST-PURPOSE regression, basic, pedagogical
#TEST-STATE   ok

set sander = "../../bin/sander"
if( $?TESTsander ) then
   set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
    setenv DO_PARALLEL " "
endif

cat > gbin <<EOF
 short md, nve ensemble
 &cntrl
   ntx=5, irest=1,
   ntc=2, ntf=2, tol=0.0000001, 
   nstlim=10, ntt=0, 
   ntpr=1, ntwr=10000, 
   dt=0.001,
 /
 &ewald
   nfft1=50, nfft2=50, nfft3=50,
 /
EOF
$DO_PARALLEL $sander -O -i gbin -c eq1.x -o mdout.pure_wat || goto error

if ( `basename $sander` == "pmemd.mic_offload.MPI" ) then
../dacdif -r 1.0e-8 mdout.pure_wat.save mdout.pure_wat
/bin/rm -f gbin restrt mdinfo
exit(0)

else

../dacdif mdout.pure_wat.save mdout.pure_wat
/bin/rm -f gbin restrt mdinfo
exit(0)
end if

error:
echo "  ${0}:  Program error"
exit(1)
