#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented
 
if( ! $?TESTsander ) set TESTsander = "../../../bin/sander.MPI"
 
if( ! $?DO_PARALLEL ) then
   echo "This test must be run in parallel --skipping"
   exit(0)
endif

cat > mdin.0 <<EOF
NPT production
 &cntrl
  imin = 0,	ntx = 1,	irest = 0,
  ntpr = 1,	ntwr = 0,	ntwx = 0,
  ntf = 1,	ntc = 2,
  ntb = 2,	cut = 9.0,
  nstlim = 10,	dt = 0.002,
  tempi = 100.0,	vrand = 5,
  temp0 = 300.0,	ntt = 2,
  ntp = 1,	pres0 = 1.0,	taup = 2.0,
  icfe=1,       clambda = 0.50000,
  ifsc=1,       scmask=':1',
  logdvdl=0,
 /
EOF

cat > mdin.1 <<EOF
NPT production
 &cntrl
  imin = 0,	ntx = 1,	irest = 0,
  ntpr = 1,	ntwr = 0,	ntwx = 0,
  ntf = 1,	ntc = 2,
  ntb = 2,	cut = 9.0,
  nstlim = 10,	dt = 0.002,
  tempi = 100.0,	vrand = 5,
  temp0 = 300.0,	ntt = 2,
  ntp = 1,	pres0 = 1.0,	taup = 2.0,
  icfe=1,       clambda = 0.50000,
  ifsc=1,       scmask='',
  logdvdl=0,
 /
EOF

cat > groupfile <<EOF
-O -i mdin.0 -o out2.0 -p ../prmtop.0 -c ../rst.0 -r restrt2.0
-O -i mdin.1 -o out2.1 -p ../prmtop.1 -c ../rst.1 -r restrt2.1
EOF

$DO_PARALLEL $TESTsander -ng 2 -groupfile groupfile < /dev/null || goto error

../../dacdif out2.0.save out2.0
../../dacdif out2.1.save out2.1
../../dacdif restrt2.0.save restrt2.0
../../dacdif restrt2.1.save restrt2.1

/bin/rm -f mdin.0 mdin.1 mdinfo groupfile
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
