#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented
 
if( ! $?TESTsander ) set TESTsander = "../../../bin/sander.MPI"
 
if( ! $?DO_PARALLEL ) then
   echo "This test must be run in parallel --skipping"
   exit(0)
endif

cat > mdin.0 <<EOF
NPT test
 &cntrl
  imin = 0,	ntx = 5,	irest = 1,
  ntpr = 5,	ntwr = 0,	ntwx = 0,
  ntf = 1,	ntc = 2,
  ntb = 2,	cut = 9.0,
  nstlim = 20,	dt = 0.001,
  temp0 = 300.0,	ntt = 3,	gamma_ln = 2,
  ntp = 1,	pres0 = 1.0,	taup = 2.0,
  icfe=1,       clambda = 0.6,
  ifsc=1,       scmask=':BNZ@H6', tishake=1,
  crgmask=':BNZ@H6',
 /
EOF
cat > mdin.1 <<EOF
NPT test
 &cntrl
  imin = 0,	ntx = 5,	irest = 1,
  ntpr = 5,	ntwr = 0,	ntwx = 0,
  ntf = 1,	ntc = 2,
  ntb = 2,	cut = 9.0,
  nstlim = 20,	dt = 0.001,
  temp0 = 300.0,	ntt = 3,	gamma_ln = 2,
  ntp = 1,	pres0 = 1.0,	taup = 2.0,
  icfe=1,       clambda = 0.6,
  ifsc=1,       scmask=':PHN@H6,O1', tishake=1,
  crgmask=':PHN@H6,O1',
 /
EOF

cat > groupfile <<EOF
-O -i mdin.0 -o out.0 -p prmtop.0 -c rst.0 -r restrt.0
-O -i mdin.1 -o out.1 -p prmtop.1 -c rst.1 -r restrt.1
EOF

$DO_PARALLEL $TESTsander -ng 2 -groupfile groupfile < /dev/null || goto error

../../dacdif -t 1 out.0.save out.0
../../dacdif -t 1 out.1.save out.1
../../dacdif -t 2 restrt.0.save restrt.0
../../dacdif -t 2 restrt.1.save restrt.1

/bin/rm -f mdin.0 mdin.1 mdinfo groupfile
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
