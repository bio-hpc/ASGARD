#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented
 
if( ! $?TESTsander ) set TESTsander = "../../../bin/sander.MPI"
 
if( ! $?DO_PARALLEL ) then
   echo "This test must be run in parallel --skipping"
   exit(0)
endif

cat > mdin.0 <<EOF
test 0
 &cntrl
  imin = 0, ntx = 5, irest = 1,
  ntpr = 5, ntwr = 2500, ntwx = 2500,
  ntf = 1, ntc = 2, cut = 9.0, ntr = 0,
  icfe = 1, clambda = 0.35,
  crgmask = ':BNZ',
  scmask = ':BNZ',
  ifsc = 1,
  ntb = 2, nstlim = 20, dt = 0.002,
  temp0 = 300, ntt = 3, gamma_ln = 5,
  ntp = 1, pres0 = 1.0, taup = 2.0,
  nmropt=1,
 /
 &wt
  TYPE="END",
 /
DISANG=disang
EOF
cat > mdin.1 <<EOF
250000 steps process 1
 &cntrl
  imin = 0, ntx = 5, irest = 1,
  ntpr = 5, ntwr = 2500, ntwx = 2500,
  ntf = 1, ntc = 2, cut = 9.0, ntr = 0,
  icfe = 1, clambda = 0.35,
  crgmask = '',
  scmask = '',
  ifsc = 1,
  ntb = 2, nstlim = 20, dt = 0.002,
  temp0 = 300, ntt = 3, gamma_ln = 5,
  ntp = 1, pres0 = 1.0, taup = 2.0,
 /
EOF

cat > groupfile <<EOF
-O -i mdin.0 -o out.0 -p prmtop.0 -c rst.0 -r restrt.0
-O -i mdin.1 -o out.1 -p prmtop.1 -c rst.1 -r restrt.1
EOF

cat > disang <<EOF
# The distance restraint
 &rst
  iat(1) = 1394,
  iat(2) = 2608,
  r1 = 0,
  r2 = 3.72,
  r3 = 3.72,
  r4 = 99,
  rk2 = 19.994, rk3 = 19.994,
 /
# The first angle restraint
 &rst
  iat(1) = 1396,
  iat(2) = 1394,
  iat(3) = 2608,
  r1 = 0,
  r2 = 91.85,
  r3 = 91.85,
  r4 = 180,
  rk2 = 19.994, rk3 = 19.994,
 /
# The second angle restraint
 &rst
  iat(1) = 1394,
  iat(2) = 2608,
  iat(3) = 2609,
  r1 = 0,
  r2 = 146.03,
  r3 = 146.03,
  r4 = 180,
  rk2 = 19.994, rk3 = 19.994,
 /
# The first dihedral restraint
 &rst
  iat(1) = 1413,
  iat(2) = 1396,
  iat(3) = 1394,
  iat(4) = 2608,
  r1 = 0,
  r2 = 204.65,
  r3 = 204.65,
  r4 = 360,
  rk2 = 19.994, rk3 = 19.994,
 /
# The second dihedral restraint
 &rst
  iat(1) = 1396,
  iat(2) = 1394,
  iat(3) = 2608,
  iat(4) = 2609,
  r1 = 0,
  r2 = 83.07,
  r3 = 83.07,
  r4 = 360,
  rk2 = 19.994, rk3 = 19.994,
 /
# The third dihedral restraint
 &rst
  iat(1) = 1394,
  iat(2) = 2608,
  iat(3) = 2609,
  iat(4) = 2604,
  r1 = 0,
  r2 = 202.17,
  r3 = 202.17,
  r4 = 360,
  rk2 = 19.994, rk3 = 19.994,
 /
EOF

$DO_PARALLEL $TESTsander -ng 2 -groupfile groupfile < /dev/null || goto error

../../dacdif out.0.save out.0
../../dacdif out.1.save out.1
../../dacdif -r 1.e-5 restrt.0.save restrt.0
../../dacdif -r 1.e-5 restrt.1.save restrt.1

/bin/rm -f mdin.0 mdin.1 mdinfo groupfile disang mdcrd
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
